# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/skechers_inventory

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Environment
DEBUG=False
FLASK_ENV=production

# File Upload
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=./uploads

# Tesseract OCR (optional - leave empty to use system PATH)
# On macOS with Homebrew: /usr/local/bin/tesseract or /opt/homebrew/bin/tesseract
# On Windows: C:/Program Files/Tesseract-OCR/tesseract.exe
# On Linux: /usr/bin/tesseract
TESSERACT_PATH=

# Features
AUTO_DROP_ENABLED=True
DEFAULT_SYNC_INTERVAL_SECONDS=60

# Server (for development)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
